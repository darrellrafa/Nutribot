# Flask Configuration
FLASK_ENV=development
FLASK_PORT=5000
CORS_ORIGINS=http://localhost:3000

# Local LLM Configuration
LLM_PROVIDER=ollama              # 'ollama' or 'gemini'
OLLAMA_HOST=http://localhost:11434
DEFAULT_MODEL=llama3.2:3b        # llama3.2:3b, qwen2.5:7b, llama3.1:8b-q4_K_M
SUMMARIZATION_MODEL=qwen2.5:7b-instruct-q5_K_M  # Model for summarization (better quality)
ENABLE_RAG=true                  # Enable RAG for food database context
FOOD_DB_PATH=dataset/nutribot_foods.db

# Google Gemini API (Optional - for fallback)
GEMINI_API_KEY=your_gemini_api_key_here
ENABLE_GEMINI_FALLBACK=true      # Fallback to Gemini if local LLM fails
